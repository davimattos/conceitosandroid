<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="right|center_vertical"
                android:textColor="@color/white"
                android:background="@color/darkGray"
                android:paddingRight="30dp"
                android:text="0"
                android:textSize="70sp"
                android:typeface="serif" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textSize="50sp"
                android:id="@+id/clean"
                android:text="C"
                android:onClick="handleClean"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="50sp"
                android:id="@+id/divider"
                android:backgroundTint="@color/orange"
                android:textColor="@color/white"
                android:text="/"
                android:onClick="handleOperation"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="50sp"
                android:id="@+id/seven"
                android:text="7"
                android:onClick="handleAdd"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="50sp"
                android:id="@+id/eight"
                android:text="8"
                android:onClick="handleAdd"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="50sp"
                android:id="@+id/nine"
                android:text="9"
                android:onClick="handleAdd"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="50sp"
                android:id="@+id/multiply"
                android:backgroundTint="@color/orange"
                android:textColor="@color/white"
                android:text="*"
                android:onClick="handleOperation"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:shadowColor="@color/darkGray"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="50sp"
                android:id="@+id/four"
                android:text="4"
                android:onClick="handleAdd"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="50sp"
                android:id="@+id/five"
                android:text="5"
                android:onClick="handleAdd"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="50sp"
                android:id="@+id/six"
                android:text="6"
                android:onClick="handleAdd"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="50sp"
                android:id="@+id/subst"
                android:backgroundTint="@color/orange"
                android:textColor="@color/white"
                android:text="-"
                android:onClick="handleOperation"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="50sp"
                android:id="@+id/one"
                android:text="1"
                android:onClick="handleAdd"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="50sp"
                android:id="@+id/two"
                android:text="2"
                android:onClick="handleAdd"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="50sp"
                android:id="@+id/three"
                android:text="3"
                android:onClick="handleAdd"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="50sp"
                android:id="@+id/sum"
                android:backgroundTint="@color/orange"
                android:textColor="@color/white"
                android:text="+"
                android:onClick="handleOperation"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="50sp"
                android:id="@+id/zero"
                android:text="0"
                android:onClick="handleAdd"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="50sp"
                android:id="@+id/comma"
                android:text="."
                android:onClick="handleAdd"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="50sp"
                android:id="@+id/equality"
                android:backgroundTint="@color/orange"
                android:textColor="@color/white"
                android:text="="
                android:onClick="handleOperation"/>

        </LinearLayout>


    </LinearLayout>
    
</RelativeLayout>